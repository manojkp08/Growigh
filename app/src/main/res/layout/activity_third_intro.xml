<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".Controller.IntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/btnSkipThirdIntro"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_skip_bg"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@animator/click_animation"
            android:padding="@dimen/_5sdp"
            android:text="Skip"
            android:layout_gravity="end"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/skipText"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/bro"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/bro" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="50dp"
            app:cardUseCompatPadding="false"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:background="@drawable/intro_card_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Vision"
                    android:layout_marginTop="5dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/noto_sans"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="485dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#B8B8B8"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/manrope_medium"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="485dp" />

                <ImageView
                    android:id="@+id/introThirdBtn"
                    android:layout_width="94dp"
                    android:layout_gravity="center"
                    android:stateListAnimator="@animator/click_animation"
                    android:layout_marginTop="40dp"
                    android:elevation="10dp"
                    android:src="@drawable/readybtn"
                    android:layout_height="94dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>